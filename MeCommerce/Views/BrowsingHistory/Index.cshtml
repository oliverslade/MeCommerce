@model IEnumerable<MeCommerce.ViewModels.BrowsingHistoryViewModel>

@{
    ViewBag.Title = "Browsing History";
}

<h2>Browsing History</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeviceType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceType)
            </td>
            <td>
                @Html.ActionLink("View Product", "Details", new { controller = "Product", id = item.ProductId })
            </td>
        </tr>
    }
</table>