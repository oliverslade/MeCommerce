@model MeCommerce.ViewModels.ExternalLoginConfirmationViewModel
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title.</h2>
<h3>Associate your External account.</h3>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <h4>Association Form</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p class="text-info">
        You've successfully authenticated with <strong>Your external login provider!</strong>
        Please enter a user name for this site below and click the Register button to finish
        logging in.
    </p>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Email, new { @class = "log-in-fields" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.HouseName, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.HouseName, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressLine1, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.AddressLine1, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressLine2, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.AddressLine2, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressLine3, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.AddressLine3, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Town, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Town, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.County, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.County, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Postcode, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Postcode, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ContactNumber, new { @class = "col-md-4 control-label" })
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.ContactNumber, new { @class = "log-in-fields" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-5 col-md-10">
            <input type="submit" class="button-style" value="Finish Registration" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}