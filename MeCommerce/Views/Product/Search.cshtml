@model IEnumerable<MeCommerce.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "Search";
}

<h2 class="text-center">Search Results</h2>

<hr />

@{
    if (Model != null)
    {

        foreach (var item in Model)
        {

            <div style="text-align: center"><img src="@Url.Content(item.ImagePath)" alt=@item.Name style="width: 50%"></div>
            <h3 class="text-center">@Html.DisplayFor(modelItem => item.Name)</h3>

            <p class="text-center ">@Html.DisplayFor(modelItem => item.ShortDescription)</p>

            <h4 class="text-center">£@Html.DisplayFor(modelItem => item.Price)</h4>

            <br />

            <p class="text-center">@Html.ActionLink("View Product", "Details", new { id = item.Id }, new { @class = "button-style" })</p>

            <hr />

        }
    }
    else
    {
        <br />
        <h4 class="text-center">Sorry, we couldn't find any products in that search :(</h4>
    }
}