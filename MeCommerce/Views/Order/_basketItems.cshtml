@model IEnumerable<MeCommerce.ViewModels.ShoppingCartItemViewModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            Qty
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.ActionLink("-", "DeleteProductFromCart", new { controller = "Order", productId = item.ProductId }, new {style="font-size: large"})
                @Html.DisplayFor(modelItem => item.Quantity)
                @Html.ActionLink("+", "AddOneToQuantity", new { controller = "Order", productId = item.ProductId }, new { style = "font-size: large" })
            </td>
            <td>
                @{
        var price = (decimal)item.Product.Price / 100;
                }

                £@price
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { controller = "Product", id = item.ProductId })
            </td>
        </tr>
    }
</table>

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.8.2.js")" type="text/javascript"></script>