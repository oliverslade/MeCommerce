@model MeCommerceAdmin.Models.CategoryViewModel

@{
    ViewBag.Title = Model.Name;
}

<div class="row">
    <div class="col-md-12">
        <h2>@Model.Name</h2>
        <p>
            Below shows all products in the @Model.Name category.
       </p>
        <p>Category Description: @Model.Description</p>
    </div>
</div>

@Html.Partial("~/Views/Product/_productTable.cshtml", Model.Products)