@model IEnumerable<MeCommerceAdmin.Models.ProductViewModel>

<hr />

@foreach (var item in Model)
{

    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>

    <p>@Html.DisplayFor(modelItem => item.ShortDescription)</p>

    <h4>£@Html.DisplayFor(modelItem => item.Price)</h4>

    <br />

    <p> @Html.ActionLink("View Product", "Details", new { controller = "Product", id = item.Id })</p>

    <hr />

}

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.8.2.js")" type="text/javascript"></script>