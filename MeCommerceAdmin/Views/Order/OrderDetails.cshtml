@model MeCommerceAdmin.Models.OrderViewModel

@{
    ViewBag.Title = "Order Details";
}

<h2>Order Details</h2>

<div>
    <h4>Below is all the information on record about order with Id: @Model.OrderId</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerTitle)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerTitle)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt>Delivery Address</dt>
        <dd>
            @Html.DisplayFor(model => model.HouseNameNumber)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.AddressLine1)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.AddressLine2)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.AddressLine3)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Town)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.County)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.Postcode)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ContactEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ContactEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePlaced)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePlaced)
        </dd>

        <dt>
            <br />
        </dt>

        @Html.Partial("~/Views/Order/_orderItems.cshtml", Model.OrderLines)

        <dt>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </dt>
        <dd>
            @{
                decimal totalPrice = (decimal)Model.TotalPrice / 100;
            }

            £@totalPrice
        </dd>
    </dl>
</div>